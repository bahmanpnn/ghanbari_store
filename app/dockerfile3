FROM python:3.11-alpine
# FROM python:alpine

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DJANGO_SUPERUSER_PASSWORD=admin

WORKDIR /app


COPY requirements.txt .
COPY reset.sh /app/reset.sh
# RUN chmod +x /app/reset.sh

RUN apk update && \
    # apk add --no-cache build-base python3-dev && \
    apk add --no-cache gcc musl-dev python3-dev mariadb-dev build-base py3-setuptools py3-pip && \
    # pip install --no-cache-dir "pip<=24.1" && \
    pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt
    # apk del gcc musl-dev python3-dev build-base
    # apk del gcc python3-dev musl-dev && \

    
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]